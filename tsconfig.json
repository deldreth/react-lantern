{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "declaration": true
  },
  "include": ["./src/**/*", "./types/*"]
}
